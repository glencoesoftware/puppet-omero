# Omero environment variables -- generated by puppet
<% custom_path = [] -%>
<% unless scope.function_hiera("java_home", '').empty? -%>
export JAVA_HOME=<%= scope.function_hiera("java_home") %>
<% custom_path << scope.function_hiera("java_home") + '/bin' -%>
<% end -%>
<% unless scope.function_hiera("jre_home", '').empty? -%>
export JRE_HOME=<%= scope.function_hiera("jre_home") %>
<% custom_path << scope.function_hiera("jre_home") + '/bin' -%>
<% end -%>
<% unless scope.function_hiera("ice_home", '').empty? -%>
export ICE_HOME=<%= scope.function_hiera("ice_home") %>
<% custom_path << scope.function_hiera("ice_home") + '/bin' -%>
<% end -%>
<% unless scope.function_hiera("omero_home", '').empty? -%>
export OMERO_HOME=<%= scope.function_hiera("omero_home") %>
<% custom_path << scope.function_hiera("omero_home") + '/bin' -%>
<% end -%>
<% unless scope.function_hiera("postgres_home", '').empty? -%>
<% custom_path << scope.function_hiera("postgres_home") + '/bin' -%>
export POSTGRES_HOME=<%= scope.function_hiera("postgres_home") %>
<% end -%>
<% unless scope.function_hiera("python_path", '').empty? -%>
export PYTHONPATH=<%= scope.function_hiera("python_path") %>:$PYTHONPATH
<% end -%>
<% unless scope.function_hiera("dyld_library_path", '').empty? -%>
export DYLD_LIBRARY_PATH=<%= scope.function_hiera("dyld_library_path") %>:$DYLD_LIBRARY_PATH
<% end -%>
<% unless scope.function_hiera("ld_library_path", '').empty? -%>
export LD_LIBRARY_PATH=<%= scope.function_hiera("ld_library_path") %>:$LD_LIBRARY_PATH
<% end -%>
<% unless custom_path.empty? -%>
export PATH=$PATH:<%= custom_path.join(':').to_s %>
<% end -%>
